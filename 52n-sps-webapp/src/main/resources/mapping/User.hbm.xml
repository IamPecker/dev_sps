<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="org.n52.sps.user">

    <class name="User" table="user_info">
        <id name="id" type="long" column="id">
            <generator class="sequence">
                <param name="sequence">user_id_seq</param>
            </generator>
        </id>

        <property name="userID" column="user_id" type="string" unique="true"/>
        <property name="passWord" column="pass_word" type="string"/>
        <property name="email" column="email" type="string"/>
        <property name="xmpp" column="xmpp" type="string"/>
        <property name="phone" column="phone" type="string"/>
        <property name="fax" column="fax" type="string"/>
        <property name="sms" column="sms" type="string"/>
        <property name="createdTime" column="created_time" type="calendar"/>
        <property name="updatedTime" column="updated_time" type="calendar"/>
        <property name="latestLoginTime" column="latest_login_time" type="calendar"/>


    </class>
</hibernate-mapping>